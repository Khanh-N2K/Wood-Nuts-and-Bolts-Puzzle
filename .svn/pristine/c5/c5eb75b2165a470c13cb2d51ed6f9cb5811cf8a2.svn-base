using UnityEngine;

public class WallHole : MonoBehaviour
{
    private Bolt bolt;

    public Bolt GetPinnedBolt()
    {
        return bolt;
    }

    public virtual void PinBolt(Bolt bolt)
    {
        this.bolt = bolt;
    }

    public float GetRadius()
    {
        return GetComponentInChildren<CircleCollider2D>().radius;
    }
}
